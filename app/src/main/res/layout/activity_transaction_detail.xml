<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <com.zjzf.shoescircle.ui.widget.TitleBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="订单详情"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.zjzf.shoescircle.ui.widget.textview.ExTextView
                        android:id="@+id/tv_state_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="求货人已付款"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_large"/>

                    <com.zjzf.shoescircle.ui.widget.textview.ExTextView
                        android:id="@+id/tv_state_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="请在规定时间内发货"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <com.zjzf.shoescircle.ui.widget.textview.ExTextView
                        android:id="@+id/tv_time_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23:59:59"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_large"/>

                    <com.zjzf.shoescircle.ui.widget.textview.ExTextView
                        android:id="@+id/tv_state_desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="剩余时间"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_white_right"
                    android:visibility="gone"/>
            </LinearLayout>

            <View style="@style/basedivider_bold_light"/>

            <LinearLayout
                android:id="@+id/container_consignee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:text="收件人信息"
                    android:textColor="@color/color_black2"
                    android:textSize="@dimen/text_normal"/>

                <View style="@style/basedivider_1dp"/>

                <com.zjzf.shoescircle.ui.widget.textview.ExTextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="收件人信息"
                    android:textColor="@color/color_black1"/>

                <View style="@style/basedivider_bold_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_black1"
                            android:textSize="@dimen/number_medium"
                            android:textStyle="bold"
                            tools:text="943.45-002"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_goods_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_black3"
                                android:textSize="12sp"
                                tools:text="尺码：41,42,43"/>

                            <TextView
                                android:id="@+id/tv_goods_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:textColor="@color/color_black3"
                                android:textSize="12sp"
                                tools:text="数量：1"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.zjzf.shoescircle.ui.widget.textview.ExTextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom|center_horizontal"
                        android:text="480"
                        android:textColor="@color/color_black3"
                        android:textSize="@dimen/text_normal"
                        />
                </LinearLayout>

                <View style="@style/basedivider_1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/tv_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_black1"
                        android:textSize="@dimen/text_normal"
                        tools:text="手续费（0.1% 4%）"/>


                    <com.zjzf.shoescircle.ui.widget.textview.ExTextView
                        android:id="@+id/tv_fee_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-19.2"
                        android:textColor="@color/color_black3"
                        android:textSize="@dimen/text_normal"
                        />
                </LinearLayout>

                <View style="@style/basedivider_1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="最后收入"
                        android:textColor="@color/color_black1"
                        android:textSize="@dimen/text_normal"/>


                    <com.zjzf.shoescircle.ui.widget.textview.ExTextView
                        android:id="@+id/tv_sum_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="460.88"
                        android:textColor="@color/color_black1"
                        android:textSize="@dimen/number_small"
                        />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/basedivider_bold_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="平台交易服务须知"
                    android:textColor="@color/color_black1"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_rules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="1.2dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/transaction_rule"
                    android:textColor="@color/color_black2"
                    android:textSize="@dimen/text_small"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <com.zjzf.shoescircle.ui.widget.textview.button.ExButton
        android:id="@+id/btn_to_ship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="去发货"
        android:textColor="@color/white"
        app:backgroundColor="@color/colorPrimary"/>
</LinearLayout>