<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_margin="32dp"
              android:background="@drawable/bg_white_round"
              android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="确认信息"
        android:textColor="#1A1A1A"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"/>

    <View
        style="@style/basedivider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="请确认您输入的信息是否正确："
        android:textColor="@color/color_black1"
        android:textSize="@dimen/text_normal"/>

    <com.zjzf.shoescircle.ui.widget.strokelayout.StrokeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:exclude_side="none">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名："
            android:textColor="@color/color_black2"
            android:textSize="@dimen/text_normal"/>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="支付宝账号："
            android:textColor="@color/color_black2"
            android:textSize="@dimen/text_normal"/>
    </com.zjzf.shoescircle.ui.widget.strokelayout.StrokeLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.zjzf.shoescircle.ui.widget.textview.button.ExButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_black2"
            app:backgroundColor="@color/white"
            app:backgroundPressedColor="@color/btn_pressed"
            app:corner_bottomLeftRadius="12dp"
            app:type="round_rect"/>

        <com.zjzf.shoescircle.ui.widget.textview.button.ExButton
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            app:backgroundColor="@color/white"
            app:backgroundPressedColor="@color/btn_pressed"
            app:corner_bottomRightRadius="12dp"
            app:type="round_rect"/>
    </LinearLayout>
</LinearLayout>