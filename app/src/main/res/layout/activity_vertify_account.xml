<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.zjzf.shoescircle.ui.widget.TitleBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="账号认证"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_round_gray">

            <ImageView
                android:id="@+id/iv_selected_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_selected_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="16dp"
                android:drawableTop="@drawable/ic_selected_pic"
                android:padding="16dp"
                android:text="点击上传图片"
                android:textColor="@color/color_black1"
                android:textSize="@dimen/text_normal"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="@color/color_black3"
            android:textSize="@dimen/text_normal"
            tools:text="请截取你的 "/>

    </LinearLayout>

    <com.zjzf.shoescircle.ui.widget.textview.button.ExButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="完成"
        android:textColor="@color/white"
        app:backgroundColor="@color/colorPrimary"/>
</LinearLayout>