<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/popup_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginTop="@dimen/vertical_special_large_padding"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/vertical_same_padding"
            android:paddingLeft="@dimen/screen_padding"
            android:paddingRight="@dimen/screen_padding"
            android:paddingTop="@dimen/vertical_same_padding"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_large"
            tools:text="测试标题"/>

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_selector"
            android:src="@drawable/ic_close"/>

    </RelativeLayout>

    <View style="@style/basedivider"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:id="@+id/divider"
        style="@style/basedivider_middle_light"/>

    <TextView
        android:id="@+id/tv_ex_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_selector"
        android:gravity="center"
        android:paddingBottom="@dimen/vertical_same_padding"
        android:paddingLeft="@dimen/screen_padding"
        android:paddingRight="@dimen/screen_padding"
        android:paddingTop="@dimen/vertical_same_padding"
        android:text="取消"
        android:textColor="@color/common_black"
        android:textSize="@dimen/text_normal"/>
</LinearLayout>
