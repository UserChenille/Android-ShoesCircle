<resources>


    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>        <!-- 是否显示title -->
        <item name="android:windowIsTranslucent">true</item>    <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item>        <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null
        </item>    <!-- 也是个drawable，定义contentoverlay的背景 -->
        <item name="android:backgroundDimEnabled">true</item>    <!-- 背景是否模糊显示 -->
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogFullStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="basedivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="basedivider_1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="basedivider_top_16" parent="basedivider">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="basedivider_bold" parent="basedivider">
        <item name="android:layout_height">12dp</item>
    </style>

    <style name="basedivider_bold_top_16" parent="basedivider_bold">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="basedivider_bold_light" parent="basedivider_bold">
        <item name="android:background">@color/bg_setting</item>
    </style>

    <style name="basedivider_middle_light" parent="basedivider_bold">
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="basedivider_small_light" parent="basedivider">
        <item name="android:layout_height">4dp</item>
    </style>

    <style name="default_item_padding">
        <item name="android:paddingLeft">@dimen/screen_padding</item>
        <item name="android:paddingRight">@dimen/screen_padding</item>
        <item name="android:paddingTop">@dimen/vertical_same_padding</item>
        <item name="android:paddingBottom">@dimen/vertical_same_padding</item>
    </style>

    <style name="default_item_padding_vertical">
        <item name="android:paddingTop">@dimen/vertical_same_padding</item>
        <item name="android:paddingBottom">@dimen/vertical_same_padding</item>
    </style>

    <style name="default_item_padding_horizontal">
        <item name="android:paddingLeft">@dimen/screen_padding</item>
        <item name="android:paddingRight">@dimen/screen_padding</item>
    </style>
</resources>
